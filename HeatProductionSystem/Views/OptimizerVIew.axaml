<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HeatProductionSystem.ViewModels"
             xmlns:lv="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
             x:Class="HeatProductionSystem.Views.OptimizerView"
             x:DataType="vm:OptimizerViewModel">

    <Grid HorizontalAlignment="Center">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 10 0 0">
            <Viewbox Stretch="Uniform" VerticalAlignment="Top">
                <Border MinWidth="600">
                    <StackPanel>  
                        <TextBlock Text="Data Optimization Results" FontSize="24" HorizontalAlignment="Center"/>

                        <Expander Header="{Binding SelectedScenario, FallbackValue='Choose a Scenario'}" 
                                    IsExpanded="{Binding ButtonExpanded, Mode=TwoWay}" 
                                    Margin="0 20 0 0"
                                    CornerRadius="10"
                                    MinHeight="0"
                                    HorizontalAlignment="Center">
                            <ListBox ItemsSource="{Binding AvailableScenarios}"  
                                    SelectedItem="{Binding SelectedScenario, Mode=TwoWay}"/>
                        </Expander>

                        <!-- Here is where you add the chart -->
                        <lv:CartesianChart Series="{Binding Series}" Height="300" />
                    </StackPanel>
                </Border>
            </Viewbox>
        </ScrollViewer>
    </Grid>

</UserControl>