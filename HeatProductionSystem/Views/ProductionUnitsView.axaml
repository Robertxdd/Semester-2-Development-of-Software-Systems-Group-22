<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HeatProductionSystem.ViewModels"
             x:Class="HeatProductionSystem.Views.ProductionUnitsView"
             x:DataType="vm:ProductionUnitsViewModel">

   
        <Grid HorizontalAlignment="Center">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 10 0 0">
                <Viewbox Stretch="Uniform" VerticalAlignment="Top">
                    <Border MinWidth="600">
                        <StackPanel>  
                            <TextBlock Text="Production Units" FontSize="24" HorizontalAlignment="Center"/>

                            <Expander Header="{Binding SelectedScenario}" 
                                      IsExpanded="{Binding ButtonExpanded, Mode=TwoWay}" 
                                      Margin="55 20 0 0"
                                      CornerRadius="10"
                                      MinHeight="0">
                                <ListBox ItemsSource="{Binding AvailableScenarios}"  
                                        SelectedItem="{Binding SelectedScenario, Mode=TwoWay}"/>
                            </Expander>

                            <ItemsControl ItemsSource="{Binding ProductionUnitList}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20 5 20 10">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="15" Margin="5 5 5 5" HorizontalAlignment="Center" BorderBrush="Black" BorderThickness="1" Padding="10" Width="490">
                                            <StackPanel Orientation="Horizontal">
                                                <Border CornerRadius="15" ClipToBounds="True">
                                                    <Image Source="{Binding Image}" Width="100" Height="100"/>
                                                </Border>

                                                <StackPanel Margin="20 0 0 0">
                                                    <StackPanel Orientation="Horizontal" Margin="2">
                                                        <TextBlock Text="Name: " Classes="Font" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding Name}" Classes="Font"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="2">
                                                        <TextBlock Text="Max Heat: " Classes="Font" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding MaxHeatOutput}" Classes="Font"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="2">
                                                        <TextBlock Text="Production Cost: " Classes="Font" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding ProductionCost}" Classes="Font"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="2">
                                                        <TextBlock Text="Fuel Consumption: " Classes="Font" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding FuelConsumption}" Classes="Font"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="2">
                                                        <TextBlock Text="CO2 Emissions: " Classes="Font" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding CO2Emissions}" Classes="Font"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Viewbox>
            </ScrollViewer>
        </Grid>
   
</UserControl>